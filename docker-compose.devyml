version: '3'
services:
  app:
    build: .
    working_dir: /app
    volumes:
      - .:/app
    restart: always
  nginx:
    image: nginx
    ports:
      - '80:80'
    links:
      - app
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/conf.d/default.conf
    restart: always
  first_request:
    image: alpine
    working_dir: /app
    volumes:
      - .:/app
    command: sh -c "apk --no-cache add curl && ./first-request.sh"

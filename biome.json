{
    "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 80
    },
    "organizeImports": { "enabled": true },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "trailingCommas": "all"
        }
    },
    "files": {
        "ignore": [ "**/node_modules/**", "**/dist/**" ]
    },
    "overrides": [ { "include": [ "**/*.hbs" ] } ]
}
